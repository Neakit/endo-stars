{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": [
      "webpack-env"
    ],
    "paths": {
      // assets
      "@img/*"         : [ "./src/assets/img/*"   ],
      "@font/*"        : [ "./src/assets/font/*"  ],
      "@style/*"       : [ "./src/assets/style/*" ],
      // "@lang"          : [ ".src/assets/lang/*"  ],
      // mock
      "@mock/*"        : [ "./src/mock/*"         ],
      // system
      "@entity/*"      : [ "./src/entity/*"      ],
      "@enum/*"        : [ "./src/enum/*"        ],
      "@plugins/*"     : [ "./src/plugins/*"     ], 
      "@router/*"      : [ "./src/router/*"      ],
      "@type/*"        : [ "./src/type/*"        ],
      // base
      "@layouts/*"     : [ "./src/layout/*"      ],
      "@pages/*"       : [ "./src/pages/*"       ],
      "@components/*"  : [ "./src/components/*"  ],
      "@composition/*" : [ "./src/composition/*" ],
      "@services/*"    : [ "./src/services/*"    ],
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx",
  ],
  "exclude": [
    "node_modules"
  ]
}
